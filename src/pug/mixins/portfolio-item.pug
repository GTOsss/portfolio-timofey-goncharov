include label-text
include slider

mixin portfolioItem(params)
	-
		var defaultParams = {
			title: '',
			goal: '',
			myWork: '',
			technology: '',
			result: '',
			images: [],
			sliderClassName: 'slider',
			wrapId: ''
		};
		var config = Object.assign({}, defaultParams, params);
	.portfolio-item
		h2.portfolio-item__title
			| #{config.title}
		if config.goal
			+labelText({ label: 'Задача: ' })
				| #{config.goal}
		if config.myWork
			+labelText({ label: 'Моя работа: ' })
				| #{config.myWork}
		if config.technology
			+labelText({ label: 'Технологии: ' })
				| #{config.technology}
		if config.result
			+labelText({ label: 'Результат: ' })
				| #{config.result}
	if config.images.length
		+slider({ images: config.images, className: config.sliderClassName, wrapId: config.wrapId })